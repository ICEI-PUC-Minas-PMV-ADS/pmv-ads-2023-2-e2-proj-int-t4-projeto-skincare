<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Rotina
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoutineText)
        </dd>
        <dt class = "col-sm-2">
            Data
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
