<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/images/favicon-32x32.png" type="image/x-icon">
    <link rel="shortcut icon" href="~/images/favicon-32x32.png" type="image/x-icon">
    <title>@ViewData["title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/backend_skincare_2023.styles.css" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <header class="header">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
                <img src="~/images/logo.png" class="website-logo" width="96" alt="" href="">
        <button class="navbar-toggler order-first" type="button" data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
          aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
          <ul class="navbar-nav mb-2 mb-lg-0">
            <li class="nav-item">
                 <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                  <a class="nav-link active" href="./html/quemsomos.html">Quem somos</a>
            </li>
            <li class="nav-item">
                 <a class="nav-link active" href="./html/guiapele.html">Guia da pele</a>
            </li>
            <li class="nav-item">
                 <a class="nav-link active" asp-area="" asp-controller="Users" asp-action="Index">Administrador</a>
            </li>

          </ul>
        </div>
               <a class="ml-auto user-icon" asp-area="" asp-controller="Users" asp-action="Create"><img src="~/images/profile.png" width="18"></a>
      </div>
    </nav>
  </header>
 

    <div >
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <section id="footer" class="mt-5">
      <div class="container">
        <div class="row text-center text-xs-center text-sm-center text-md-center">
          <div class="col-xs-12 col-sm-8" id="footer-text">
            <p class="copy-right"><a href="javascript:void();">2023 SOFT CARE. Todos os direitos reservados.</a>
            </p>
            <p class="privacidade"><a href="javascript:void();">Política de privacidade</a>
            <p class="terms"><a href="javascript:void();">Termos de uso</a>
            <p>
          </div>
        </div>
        <div class="social">
          <a href="https://www.instagram.com/" target="_blank"><i class="bi bi-instagram"></i></a>
          <a href="https://es-es.facebook.com/" target="_blank"><i class="bi bi-facebook"></i></a>
          <a href="https://twitter.com/?lang=ES" target="_blank"><i class="bi bi-twitter"></i></a>
        </div>
      </div>
    </section>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
