@model backend_skincare_2023.Models.Questionario
@{
    ViewData["Title"] = "Soft Care";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Soft Care</title>
    <link rel="stylesheet" href="~/css/Questionario.css" asp-append-version="true" />
</head>
<body>
    <hr class="hr" />


 <div class="container-fluid" id=container-questionario>
        <form method="post" action="/Questions/EnviarRespostas" class="container-form">
    @for (int i = 0; i < Model.Perguntas.Count; i++)
    {
        <fieldset>
                    <legend class="mb-3 mt-4 pergunta">@Model.Perguntas[i].Id: @Model.Perguntas[i].Pergunta</legend>
                    @for (int j = 0; j < Model.Perguntas[i].Respostas.Count; j++)
                    {
                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="radio" id="resposta-@i-@j" name="respostas[@i]" value="@j">
                            <label class="form-check-label" for="resposta-@i-@j">@Model.Perguntas[i].Respostas[j]</label>
                        </div>
                    }

             <div class="text-danger">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
        </fieldset>
    }
    <div class="text-center">
        <button type="submit" class="btn btn-purple mt-4" id="btn-questionario">Enviar</button>
    </div>

   
</form>

</div>

    @if (ViewBag.AlertMessage != null)
    {
        <script>
            alert("@ViewBag.AlertMessage");
        </script>
    }

</body>
</html>