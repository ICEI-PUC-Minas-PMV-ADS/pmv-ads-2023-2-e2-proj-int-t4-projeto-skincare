@model backend_skincare_2023.Models.User

@{
    ViewData["Title"] = "Soft Care";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
        <title>Soft Care</title>
        <link rel="stylesheet" href="~/css/UserDetails.css" asp-append-version="true" />
    </head>
    <body>
        <hr class="hr" />

<div class="main-part" id="details">
    <div>
    <h1>Detalhes</h1>
    <dl class="row mt-4">
        <dt class = "col-sm-2">
           Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
           Sobrenome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
           Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Data nascimento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormattedBirthDate)
        </dd>
    </dl>
</div>
<div class="mb-4 mt-4">
    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.UserId">Editar</a>
    <a asp-action="Index" class="btn btn-purple">Voltar</a>
</div>

</div>
</body>
</html>