@model backend_skincare_2023.Models.User

@{
    ViewData["Title"] = "Details";
}

<hr class="hr" />

<div class="main-part">
    <div>
    <h1>Detalhes</h1>
    <dl class="row mt-4">
        <dt class = "col-sm-2">
           Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
           Sobrenome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
           Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Data nascimento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormattedBirthDate)
        </dd>
        <dt class = "col-sm-2">
            Senha
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PasswordKey)
        </dd>
    </dl>
</div>
<div class="mb-4 mt-4">
    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.UserId">Editar</a>
    <a asp-action="Index" class="btn btn-purple">Voltar</a>
</div>

</div>
