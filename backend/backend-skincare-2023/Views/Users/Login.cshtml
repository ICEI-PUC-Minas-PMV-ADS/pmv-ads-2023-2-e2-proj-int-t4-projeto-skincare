@model backend_skincare_2023.Models.User

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Nome</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="PasswordKey" class="control-label">Senha</label>
                <input asp-for="PasswordKey" class="form-control" />
                <span asp-validation-for="PasswordKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Acess" class="btn btn-sucess" />
            </div>
        </form>
        <h3> @ViewBag.Message</h3>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}