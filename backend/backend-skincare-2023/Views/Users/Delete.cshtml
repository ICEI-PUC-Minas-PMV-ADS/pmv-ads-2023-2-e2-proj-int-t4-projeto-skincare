@model backend_skincare_2023.Models.User

@{
    ViewData["Title"] = "Delete";
}

<hr class="hr" />

<div class="main-part">
    <h4>Excluir usuário</h4>
    <dl class="row mt-4">
        <dt class = "col-sm-2">
           Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
           Sobrenome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
           Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
           Data nascimento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormattedBirthDate)
        </dd>
        <dt class = "col-sm-2">
            Senha
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PasswordKey)
        </dd>
        <dt class="col-sm-2">
            Tipo de Usuário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Perfil)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="mb-4">
        <input type="hidden" asp-for="UserId" />
        <input type="submit" value="Excluir" class="btn btn-danger mr-3" /> 
        <a asp-action="Index" class="btn btn-purple">Voltar</a>
    </form>
</div>
