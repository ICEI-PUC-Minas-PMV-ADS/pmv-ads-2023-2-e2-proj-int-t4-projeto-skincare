@model backend_skincare_2023.Models.User

@{
    ViewData["Title"] = "Soft Care";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
        <title>Soft Care</title>
        <link rel="stylesheet" href="~/css/UserDelete.css" asp-append-version="true" />
    </head>
    <body>
        <hr class="hr" />

<div class="main-part" id="delete">
    <h3>Excluir usuário</h3>
    <dl class="row mt-4">
        <dt class = "col-sm-2">
           Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
           Sobrenome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
           Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
           Data nascimento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormattedBirthDate)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="mb-4">
        <input type="hidden" asp-for="UserId" />
        <input type="submit" value="Excluir" class="btn btn-danger mr-3" /> 
        <a asp-action="Index" class="btn btn-purple">Voltar</a>
    </form>
</div>
</body>
</html>
