@model IEnumerable<backend_skincare_2023.Models.User>

@{
    ViewData["Title"] = "Soft Care";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
        <title>Soft Care</title>
        <link rel="stylesheet" href="~/css/UserCadastrado.css" asp-append-version="true" />
    </head>
    <body>
        <hr class="hr" />

    <div class="main-part" id="table">
    <h1 style="text-align: center;">Usuários cadastrados</h1>

<p>
    <a asp-action="Create" class="btn btn-purple mt-4">Criar usuário</a>
</p>


<table class="table mb-5">
    <thead>
        <tr>
            <th>
               Nome
            </th>
            <th>
                Sobrenome
            </th>
            <th>
               Email
            </th>
            <th>
                Data Nascimento
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormattedBirthDate)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-custom mr-2">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.UserId" class="text-danger trash" style="text-decoration: none;">
                         <i class="fas fa-trash" style="font-size: 20px;"></i>
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>

</div>


</body>
</html>