@model IEnumerable<backend_skincare_2023.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Usuários cadastrados</h1>

<p>
    <a asp-action="Create" class="btn btn-purple">Criar usuário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Nome
            </th>
            <th>
                Sobrenome
            </th>
            <th>
               Email
            </th>
            <th>
                Data Nasciment0
            </th>
            <th>
                Senha
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormattedBirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PasswordKey)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-custom mr-2">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.UserId" class="text-danger trash" style="text-decoration: none;">
                         <i class="fas fa-trash" style="font-size: 20px;"></i>
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
